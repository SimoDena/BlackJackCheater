@model EnterRoomViewModel

@{
    ViewBag.Title = "Home";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-sm-12 text-center">
            <h1>BlackJack Cheater</h1>
            <p class="p-4">Gambling cheats people, so why not cheating gambling?</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 border border-success rounded-pill p-5">
            <h3 class="text-center">Create a cheat Room</h3>
            <a class="btn btn-outline-secondary btn-block" asp-controller="Home" asp-action="CreateRoom">Create a Room</a>
        </div>
        <div class="col-md-6 border border-success rounded-pill p-5">
            <h3 class="text-center">Enter in a cheat Room</h3>
            <form method="post">
                <div class="mb-3">
                    <label asp-for="IdMatch">Cheat room name:</label>
                    <input asp-for="IdMatch" class="form-control" placeholder="Cheat Room"/>
                    <span asp-validation-for="IdMatch" class="text-danger"></span>
                </div>
                <div>
                    <b>Enter as:</b>
                </div>
                <div class="form-check">
                    <input type="radio" name="Role" value="Cheater" class="form-check-input"/> Cheater
                </div>
                <div class="mb-3 form-check">
                    <input type="radio" name="Role" value="Helper" class="form-check-input" checked/> Cheater Helper
                </div>
                <button class="btn btn-outline-secondary btn-block" asp-controller="Home" asp-action="Index">Enter</button>
                <div asp-validation-summary=All class="text-danger"></div>
            </form>
        </div>
    </div>
</div>
